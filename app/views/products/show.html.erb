<div class="border border-secondary m-3 p-1 rounded-3">
  <div class="d-inline-flex p-1">
    <figure>
      <%= image_tag(src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/#{rand(1..100)}.png") %>
    </figure>
    <div class="p-4">
      <div><h3><%= @product.title.capitalize %></h3></div>
      <div><h4><%= @product.price %></h4></div>
    </div>

  </div>



  <table class="table bg-light table-hover">
    <thead>
    <tr>
      <th>Attribute</th>
      <th>Value</th>
    </tr>
    </thead>
    <tbody>
    <% @product.features.each do |f| %>
      <tr>
        <th><%= "#{f.name}:" %></th>
        <td><%= f.value %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="d-inline-flex justify-content-between w-100">
    <div class="px-3">
      <%= link_to "Back", category_path(@product.category) %>
    </div>
    <div class="px-3">
      <%= link_to "Edit", edit_category_product_path(@product) %>
    </div>
  </div>

</div>

